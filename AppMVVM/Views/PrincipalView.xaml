<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMVVM.Views.PrincipalView"
             Title="PrincipalView">
    <StackLayout Padding="20">
        <Label Text="MVVM"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Entry Placeholder="Insira seu nome"
               FontSize="20"
               Text="{Binding Nome}"/>

        <Label Text="{Binding Retorno}"
               FontSize="30"
               TextColor="Blue"/>

        <Button Text="Executar"
                Command="{Binding RetornoCommand}"/>

        <Button Text="Abrir Cliente"
                FontSize="20"
                Command="{Binding AbrirClienteCommand}"/>
    </StackLayout>
</ContentPage>